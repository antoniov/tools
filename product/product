# flake8, autopep8, pylint, pylint-mccabe, coverage, coveralls, github3.py click
#[RHEL]
# curl --silent --location https://rpm.nodesource.com/setup_5.x | bash -
# yum -y install nodejs
# curl -L https://npmjs.org/install.sh | sh
#[Debian]
# apt-get install nodejs
# apt-get install npm
#[Common]
# npm install -g less
# npm install -g less-plugin-clean-css
#[End]
# per Kaspersky
# yum install kernel-headers
# yum install glibc.i686


THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
if [ -d $TDIR/tests ]; then
  TESTDIR=$TDIR/tests
elif [ -d $TDIR/../tests ]; then
  TESTDIR=$TDIR
elif [ -d ./tests ]; then
  TESTDIR=./tests
elif [ -d ../tests ]; then
  TESTDIR=.
else
  TESTDIR=$TDIR
fi
if [ -e $TDIR/z0librc ]; then
. $TDIR/z0librc
elif [ -e ./z0librc ]; then
. ./z0librc
elif [ -e ../z0librc ]; then
. ../z0librc
elif [ -e ~/z0librc ]; then
. ~/z0librc
elif [ -e /etc/z0librc ]; then
. /etc/z0librc
else
  echo "Library file z0librc not found!"
  exit $STS_FAILED
fi
TESTDIR=$(readlink -e $TESTDIR)


__version__="0.2.30"

STS_FAILED=1
STS_SUCCESS=0
THIS=$(basename $0)
TDIR=$(echo $(readlink -f $(dirname $0)))


