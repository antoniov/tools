do_1_realname_package() {
# do_1_realname_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_1_realname_package($1 $2 $3)">>~/$THIS.his; fi    #debug
    echo "$2"
    return $STS_SUCCESS
}

do_1_installer_package() {
# do_1_installer_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " " do_1_installer_package($1 $2 $3)">>~/$THIS.his; fi    #debug
    local xtlcmd=$(get_act_xtlcmd $2 "install")
    echo "$xtlcmd"
    return $STS_SUCCESS
}

do_1_vfycmd_package() {
# do_1_vfycmd_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_1_vfycmd_package($1 $2 $3)">>~/$THIS.his; fi    #debug
    local vfycmd=$(get_prm_value "0" "${2}_vfycmd")
    echo "$vfycmd"
    return $STS_SUCCESS
}

do_1_status_package() {
# do_1_status_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_1_status_package($1 $2 $3 $4 $5)">>~/$THIS.his; fi    #debug
    local pkgversion="$(get_pkg_ver $2 $3)"
    [ -n "$pkgversion" ]
    return $?
}

do_1_info_package() {
# do_1_info_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_1_info_package($1 $2 $3 $4 $5)">>~/$THIS.his; fi    #debug
    local pkgname=$(get_realname $2)
    local pkglist=$(prod realname $2)
    local xtlcmd=$(get_act_xtlcmd $pkgname "install")
    local svcname=$(get_prm_value "0" "${pkgname}_svcname")
    local cmdname=$(get_prm_value "0" "${pkgname}_cmdname")
    local vfycmd=$(get_prm_value "0" "${pkgname}_vfycmd")
    if [[ $pkglist =~ = ]]; then
      echo "$pkglist (install by $xtlcmd)"
    else
      if [ "$2" == "$pkgname" ]; then
        echo "$2 (install by $xtlcmd)"
      else
        echo "$2=$pkgname (install by $xtlcmd)"
      fi
    fi
    if [ -n "$svcname" ]; then
      echo " service=$svcname"
    fi
    if [ -n "$cmdname" ]; then
      echo " command=$cmdname"
    fi
    if [ -n "$vfycmd" ]; then
      echo " get ver=$vfycmd"
    fi
    return $STS_SUCCESS
}

do_dry_status_package() {
# do_dry_status_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_dry_status_package($1 $2 $3 $4 $5)">>~/$THIS.his; fi    #debug
    local x=$((prdstk_level*2))
    local lm=$(printf "%${x}.${x}s" " "|sed y'/ /-/')
    do_1_status_package "$@"
    sts=$?
    local xtlcmd=$(get_act_xtlcmd $2 "install")
    if [ $sts -eq $STS_SUCCESS ]; then
      local cmd="wlog \"$lm$pkgname: installed by $xtlcmd\""
    else
      local cmd="wlog \"$lm$pkgname could be installed by $xtlcmd\""
    fi
    eval $cmd
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return(0) #dry_status_package">>~/$THIS.his; fi    #debug
    return $STS_SUCCESS
}

do_dry_version_package() {
# do_dry_version_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_dry_version_package($1 $2 $3 $4 $5)">>~/$THIS.his; fi    #debug
    local pkgversion
    local xtlcmd
    local cmd
    local x=$((prdstk_level*2))
    local lm=$(printf "%${x}.${x}s" " "|sed y'/ /-/')
    do_1_status_package "$@"
    if [ $? -ne $STS_SUCCESS ]; then
      local xtlcmd=$(get_act_xtlcmd $2 "install")
      cmd="wlog \"$lm$pkgname should be installed by $xtlcmd\""
    else
      pkgversion=$(get_pkg_ver $2 $3)
      if [ -z "$pkgversion" ]; then
        pkgversion="$pkgname: unknown version"
      fi
      if [ $opt_quiet -gt 0 ]; then
        cmd="wlog \"$pkgversion\""
      else
        cmd="wlog \"$lm$pkgname: $pkgversion\""
      fi
    fi
    eval $cmd
    return $STS_SUCCESS
}

do_dry_whatis_package() {
# do_dry_whatis_package(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_dry_whatis_package($1 $2 $3)">>~/$THIS.his; fi    #debug
    local x=$((prdstk_level*2))
    local lm=$(printf "%${x}.${x}s" " "|sed y'/ /-/')
    local xtlcmd=$(get_act_xtlcmd $2 "install")
    local svcname=$(get_prm_value "0" "${2}_svcname")
    local cmdname=$(get_prm_value "0" "${2}_cmdname")
    local vfycmd=$(get_prm_value "0" "${cmdname}_vfycmd")
    if [ -n "$vfycmd" ]; then
      local msg="$lm$2 (by $xtlcmd)($vfycmd)"
    else
      local msg="$lm$2 (by $xtlcmd)"
    fi
    test_msg "$msg"
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return(0) #do_dry_whatis_package">>~/$THIS.his; fi    #debug
    return $STS_SUCCESS
}

satisfy_request() {
# satisfy_request(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "satisfy_request($1 $2 $3)">>~/$THIS.his; fi    #debug
    local sts=127
    local s
    local pkgname=$2
    local REQlist="$(get_prm_value "0" REQ_$pkgname)"
    local xtlcmd=$(get_act_xtlcmd $2 "install")
    if [ "$xtlcmd" == "git" -o "$xtlcmd" == "wget" ]; then
      if [[ "$REQlist" =~ $xtlcmd ]]; then
        :
      else
        local REQlist="$REQlist $xtlcmd"
      fi
    fi
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  REQ=$REQlist">>~/$THIS.his; fi    #debug
    if [ "$1" == "install" -a -n "$REQlist" ]; then
      ((prdstk_level++))
      if [[ $3 =~ b ]]; then local x="-qb"; else local x="-q"; fi
      for p in $REQlist; do
        realname=$(get_realname $p $1 $3)
        if $(prod status $realname $x); then
          [ $sts -eq 127 ] && sts=$STS_SUCCESS
        else
          prod install $realname $3
          s=$?
          [ $sts -eq 127 ] && sts=$s
          [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$s
        fi
      done
      ((prdstk_level--))
    fi
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #satisfy_request">>~/$THIS.his; fi    #debug
    return $sts
}

do_action_subpkg() {
# do_action_subpkg(pfx action pkgname OPTS)
    if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_action_subpkg($1 $2 $3 $4)">>~/$THIS.his; fi    #debug
    local p
    local x
    local rs=$(get_realname $3 $2)
    local realname
    if [[ $4 =~ [qQ] ]]; then
      :
    else
      local iter=$(get_iter $3)
      local sts=$STS_SUCCESS
      if [ "$3" != "$iter" ]; then
        for p in $iter; do
          if [ "$p" != "$3" -a "$p" != "$rs" ]; then
            realname=$(get_realname $p $2)
            do_action_subpkg "$1" $2 $realname $4Q
            sts=$?
            if [ $sts -ne $STS_SUCCESS ]; then
              break
            fi
          fi
        done
      else
        do_action_subpkg "$1" $2 $3 $4Q
        sts=$?
      fi
      if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_action_subpkg">>~/$THIS.his; fi    #debug
      return $sts
    fi
    verbose_msg "Analyzing $3"
    local opts=${4//Q/}
    opts=${opts//q/}
    opts=${opts//I/}
    opts=${opts//J/}
    if [[ $4 =~ b ]]; then x="-qb"; else x="-q"; fi
    if [ "$1" == "pre_" ]; then
       do_1_status_package "$@"
       sts=$?
       if [ "$2" == "install" -a $sts -eq $STS_SUCCESS ]; then
         sts=17
       elif [ "$2" == "update" -a $sts -ne $STS_SUCCESS ]; then
         sts=2
       elif [ "$2" == "remove" -a $sts -ne $STS_SUCCESS ]; then
         sts=2
       else
         prod $1$2 $3 $opts
       fi
    # if [ "$2" == "install" ]; then
    #   if $(prod status $3 $x); then
    #     prod ${1}update $3 $opts
    #   else
    #     prod $1$2 $3 $opts
    #   fi
    # elif [ "$2" == "update" ]; then
    #   if $(prod status $3 $x); then
    #     prod ${1}$2 $3 $opts
    #   else
    #    prod ${1}install $3 $opts
    #   fi
    # elif [ "$2" == "remove" ]; then
    #  if [ "$1" == "do_" ]; then
    #    if $(prod status $3 $x); then
    #      elog "# $3 should be removed"
    #     fi
    #   fi
    else
      prod $1$2 $3 $opts
    fi
    sts=$?
    if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_action_subpkg">>~/$THIS.his; fi    #debug
    return $sts
}


do_act_all_subpkgs() {
# do_act_all_subpkgs(pfx action pkgname OPTS)
    if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_act_all_subpkgs($1 $2 $3 $4)">>~/$THIS.his; fi    #debug
    local sts=$STS_SUCCESS
    local s
    local SUBlist="$(get_prm_value "0" SUB_$3)"
    if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  SUBlist=$SUBlist($prdstk_level<$opt_depth)">>~/$THIS.his; fi    #debug
    if [ -n "$SUBlist" -a $prdstk_level -lt $opt_depth ]; then
      ((prdstk_level++))
      local p
      for p in $SUBlist; do
        do_action_subpkg "$1" $2 $p "$4" "$5"
        s=$?
        [ $sts -eq 127 ] && sts=$s
        [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$s
      done
      ((prdstk_level--))
    fi
    if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_act_all_subpkgs">>~/$THIS.his; fi    #debug
    return $sts
}

do_iter_local_function() {
# do_iter_local_function(prefix svcname action pkgname OPTS)
    if [[ $5 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_iter_local_function($1 $2 $3 $4 $5)">>~/$THIS.his; fi    #debug
    local sts=127
    local s
    # if [ $sts -eq $STS_SUCCESS -o $sts -eq 127 ]; then
      if [ "$1" == "pre_" ]; then
        satisfy_request $3 $4 $5
        sts=$?
      fi
      do_local_function "$1" "$2" $3 $4 $5
      s=$?
      [ $sts -eq 127 ] && sts=$s
      [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$s
      local SUBlist="$(get_prm_value "0" SUB_$4)"
      if [[ $4 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  SUBlist=$SUBlist($prdstk_level<$opt_depth)">>~/$THIS.his; fi    #debug
      if [ -n "$SUBlist" -a $prdstk_level -lt $opt_depth ]; then
      # else
        if [ $sts -eq $STS_SUCCESS -o $sts -eq 127 ]; then
          do_act_all_subpkgs "$1" $3 $4 $5
          sts=$?
        fi
      fi
    # fi
    return $sts
}

do_local_function() {
# do_local_function(prefix svcname action pkgname OPTS)
    if [[ $5 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_local_function($1 $2 $3 $4 $5)">>~/$THIS.his; fi    #debug
    local sts=127
    local s
    if [[ $5 =~ I ]]; then
       local ij=I
    elif [[ $5 =~ J ]]; then
       local ij=J
    else
      local ij=
    fi
    local xtlcmd=$(get_act_xtlcmd $4 $3)
    if [ -n "$2" ]; then
       local X="_$4 _by_$xtlcmd _service _package"
    else
       local X="_$4 _by_$xtlcmd _package"
    fi
    local cmd x c d
    for c in _${3} _; do
      for x in $X; do
        if [ "$x" == "_service" -o "$x" == "_package" -o $opt_dry_run -eq 0 ]; then
          local D="_dry _"
        else
          local D="_dry"
        fi
        for d in $D; do
          cmd=${1}$d$c$x
          cmd=${cmd//__/_}
          # if [[ $5 =~ b ]]; then echo "# [$cmd]">>~/$THIS.his; fi #debug
          if [ "$(type -t $cmd)" == "function" ]; then
            eval $cmd $3 $4 $5
            s=$?
            [ $sts -eq 127 ] && sts=$s
            [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$s
            if [ $sts -eq $STS_SUCCESS ]; then
              cmd=${1}_${3}_ports
              cmd=${cmd//__/_}
              # if [[ $5 =~ b ]]; then echo "# [$cmd]">>~/$THIS.his; fi #debug
              if [ "$(type -t $cmd)" == "function" ]; then
                eval $cmd $3 $4 $5
                s=$?
                [ $sts -eq 127 ] && sts=$s
                [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$s
              fi
            fi
            if [[ $5 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_local_function">>~/$THIS.his; fi    #debug
            return $sts
          fi
        done
      done
    done
    cmd=${1}_${3}_ports
    cmd=${cmd//__/_}
    # if [[ $5 =~ b ]]; then echo "# [$cmd]">>~/$THIS.his; fi #debug
    if [ "$(type -t $cmd)" == "function" ]; then
      eval $cmd $3 $4 $5
      s=$?
      [ $sts -eq 127 ] && sts=$s
      [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$s
    fi
    if [[ $5 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_local_function">>~/$THIS.his; fi    #debug
    return $sts
}

do_iter_prod() {
# do_iter_prod(action pkgname OPTS)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "do_iter_prod($1 $2 $3)">>~/$THIS.his; fi #debug
    local pfx=$(get_pfxaction $1)
    local act=$(get_realaction $1)
    local pkgname=$(get_realname $2 $act $3)
    if [[ $3 =~ [qQ] ]]; then
      if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return(127) #do_iter_prod">>~/$THIS.his; fi    #debug
      return 127
    fi
    if [ "$act" == "info" ]; then
      if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return(127) #do_iter_prod">>~/$THIS.his; fi    #debug
      return 127
    fi
    local iter=$(get_iter $pkgname $3)
    if [ "$act" == "realname" ]; then
      if [ "$2" == "$iter" ]; then
        echo "$2"
      elif [ "$pkgname" == "$iter" ]; then
        echo "$2=$pkgname"
      else
        echo "$2=($iter)"
      fi
      if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return(0) #do_iter_prod">>~/$THIS.his; fi    #debug
      return $STS_SUCCESS
    fi
    if [ "$pkgname" == "$iter" ]; then
      if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_iter_prod">>~/$THIS.his; fi    #debug
      return 127
    fi
    local p
    for p in $iter; do
      if [ "$p" == "$2" -o "$p" == "$pkgname" ]; then
         prod $1 $p "-Q" "$4" "$5"
       else
         prod $1 $p "$3" "$4" "$5"
       fi
       local sts=$?
       if [ $sts -ne $STS_SUCCESS ]; then
         break
       fi
    done
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #do_iter_prod">>~/$THIS.his; fi    #debug
    return $sts
}

prod() {
# prod(action pkgname OPTS)
# return: sts
# TODO [Debian] aptitude search 'pkgname'
# TODO [RHEL] yum search 'pkgname'
    if [ -z "$prdstk_level" ]; then prdstk_level=0; fi
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "prod($1 $2 $3)">>~/$THIS.his; fi #debug
    do_iter_prod "$@"
    local sts=$?
    if [ $sts -ne 127 ]; then
      if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #prod">>~/$THIS.his; fi   #debug
      return $sts
    fi
    local x=$((prdstk_level*2))
    local lm=$(printf "%${x}.${x}s" " "|sed y'/ /-/')
    local pfx=$(get_pfxaction $1)
    local act=$(get_realaction $1)
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  pfx=$pfx; act=$act;">>~/$THIS.his; fi #debug
    if [ "$act" == "info" ]; then
      local pkgname=$2
    else
      local pkgname=$(get_realname $2 $act)
    fi
    if [[ " $SIMULATE_YES " =~ [[:space:]]$pkgname[[:space:]] ]]; then
      local ij="I"
    elif [[ " $SIMULATE_NO " =~ [[:space:]]$pkgname[[:space:]] ]]; then
      local ij="J"
    else
      local ij=
    fi
    local SUBcmd=do_dry_${act}_package
    local SUBcmd1=do_1_${act}_package
    local SUBcmd2=
    local svcname=$(get_prm_value "0" "${pkgname}_svcname")
    if [ -z "$pfx" ]; then
      if [ "$(type -t $SUBcmd1)" == "function" ] && [[  "$3" =~ q ]]; then
        eval $SUBcmd1 $act $pkgname "$3$ij" "$4" "$5"
        return $?
      elif [ "$(type -t $SUBcmd1)" == "function" -a "$(type -t $SUBcmd)" != "function" ]; then
        eval $SUBcmd1 $act $pkgname "$3$ij" "$4" "$5"
        return $?
      fi
    fi
    sts=$STS_SUCCESS
    local s
    if [ -z "$pfx" -o "$pfx" == "pre_" ]; then
      [ $sts -eq $STS_SUCCESS ] && do_iter_local_function "pre_" "$svcname" "$act" "$pkgname" "$3$ij" "$4" "$5"
      s=$?
      if [ $s -eq 17 -a "act" == "install" ]; then
        if [ $prdstk_level -eq 0 ]; then
          ij="I"
        else
          act="update"
        fi
        do_iter_local_function "pre_" "$svcname" "$act" "$pkgname" "$3$ij" "$4" "$5"
      elif [ $s -eq 2 -a "act" == "update" ]; then
        if [ $prdstk_level -eq 0 ]; then
          ij="J"
        else
          act="install"
        fi
        do_iter_local_function "pre_" "$svcname" "$act" "$pkgname" "$3$ij" "$4" "$5"
      elif [ $s -eq 2 -a "act" == "remove" ]; then
        if [ $prdstk_level -eq 0 ]; then
          ij="J"
        fi
        s=$STS_SUCCESS
      fi
      [ $sts -eq $STS_SUCCESS ] && [ $s -ne 127 ] && [ $s -ne $STS_SUCCESS ] && sts=$s
    fi
    if [ -z "$pfx" -o "$pfx" == "do_" ]; then
      [ $sts -eq $STS_SUCCESS ] && do_iter_local_function "do_" "$svcname" "$act" "$pkgname" "$3$ij" "$4" "$5"
      s=$?
      [ $sts -eq $STS_SUCCESS ] && [ $s -ne $STS_SUCCESS ] && sts=$?
    fi
    if [ -z "$pfx" -o "$pfx" == "post_" ]; then
      [ $sts -eq $STS_SUCCESS ] && do_iter_local_function "post_" "$svcname" "$act" "$pkgname" "$3$ij" "$4" "$5"
      s=$?
      [ $sts -eq $STS_SUCCESS ] && [ $s -ne 127 ] && [ $s -ne $STS_SUCCESS ] && sts=$?
    fi
    if [ $sts -ne $STS_SUCCESS ] || [[  "$3" =~ q ]]; then
      return $sts
    fi
    if [ $prdstk_level -eq 0 -a "$FH" == "Debian" -a "$1" == "remove" ]; then
      run_traced "apt-get autoremove"
    fi
    if [[ $3 =~ b ]]; then printf "%${prdstk_level}.${prdstk_level}s %s\n" " " "  return($sts) #prod">>~/$THIS.his; fi  #debug
    return $sts
}

init_odoo_env() {
    if [ ! -d /opt/odoo ]; then
      run_traced "mkdir -p /opt/odoo"
    fi
    if [ "$opt_oed" == "odoo" ]; then
      gitrep="odoo/odoo"
    elif [ "$opt_oed" == "oca" ]; then
      gitrep="OCA/OCB"
    else
      gitrep="zeroincombenze/OCB"
    fi
    if [ -z "$opt_odoo" ]; then
      opt_odoo="*"
    fi
}

product_install_odoo() {
# product_install_odoo::pkgname opt_yes xtlcmd, stscmd STD_PKGS
    init_odoo_env
    git_opts=""
    if [ "$opt_odoo" == "*" -o -z "$opt_odoo" ]; then
      local ov_iter="9 8 7"
    else
      local ov_iter=$opt_odoo
      git_opts="--single-branch"
    fi
    if [ $opt_dev -eq 0 ]; then
      git_opts="--depth 1 $git_opts"
    fi
    for ov in $ov_iter; do
      local xtl=1
      local v=$(_inq "odoo")
      if [ -n "$v" -a -d /opt/odoo/$ov.0 ]; then
        cd /opt/odoo/$ov.0
        git status &>/dev/null
        if [ $? -ne 128 ]; then xtl=0; fi
      fi
      run_traced "cd /opt/odoo"
      if [ $xtl -gt 0 ]; then
        run_traced "git clone https://github.com/$gitrep.git $ov.0 -b $ov.0 $git_opts" "odoo" #debug
        if [ -n "$opt_osub" ]; then
          install_submodules "$opt_osub" "$ov"
        fi
        if [ -n "$opt_sub" ]; then
          install_submodules "$opt_sub" "$ov"
        fi
        if [ -n "$opt_locale" ]; then
          install_submodules "$opt_locale" "$ov"
        fi
      fi #debug
      run_traced "chown -R odoo:odoo $ov.0/"
      run_traced "cd /opt/odoo/$ov.0"
      run_traced "git checkout $ov.0"
      if [ $test_mode -eq 0 -a -f /opt/odoo/$ov.0/requirements.txt ]; then
        local f=/opt/odoo/7.0/requirements.txt
        local p n v r
        while IFS=\= read p n v; do
          r=$(product -q version $p)
          r=$(echo $r)
          if [ "$r" == "$v" ]; then
            elog "Package $p $r already installed"
          else
            r=$(product -q status $p|grep "could be")
            if [ -z "$r" ]; then
              run_traced "pip install $p --upgrade"
            else
              run_traced "pip install $p"
            fi
            r=$(product -q version $p)
            r=$(echo $r)
            if [ "$r" != "$v" ]; then
              elog "Package $p has invalid version $r: required $v"
            fi
          fi
        done < $f
      fi
    done
}

product_update_odoo() {
# product_install_product::pkgname opt_yes xtlcmd, stscmd STD_PKGS, PIP_PKGS
    init_odoo_env
    if [ "$opt_odoo" == "*" -o -z "$opt_odoo" ]; then
      local ov_iter="9 8 7"
    else
      local ov_iter=$opt_odoo
    fi
    for ov in $ov_iter; do
      local xtl=0
      if [ -d /opt/odoo/$ov.0 ]; then
        run_traced "cd /opt/odoo/$ov.0"
        if [ $test_mode -gt 0 ]; then
          :
        else
          git status &>/dev/null
        fi
        if [ $? -ne 128 ]; then xtl=1; fi
        if [ $xtl -gt 0 ]; then
          run_traced "git pull origin $ov.0" "odoo"
          if [ $test_mode -eq 0 ]; then
             opt_sub=$(grep "\[submodule" .gitmodules|awk '{print $2}'|tr -d "\"]"|tr "\n" " ")
          fi
          if [ -n "$opt_osub" ]; then
            install_submodules "$opt_osub" "$ov"
          fi
          if [ -n "$opt_sub" ]; then
            install_submodules "$opt_sub" "$ov"
          fi
          if [ -n "$opt_locale" ]; then
            install_submodules "$opt_locale" "$ov"
          fi
        fi
        run_traced "git checkout $ov.0"
      fi
    done
}

product_config_odoo() {
    if [ "$opt_odoo" == "*" -o -z "$opt_odoo" ]; then
      local ov_iter="9 8 7"
      local opt_multi="-m"
    else
      local ov_iter=$opt_odoo
      if [ $opt_mult -gt 0 ]; then
        local opt_multi="-m"
      else
        local opt_multi=""
      fi
    fi
    local userhome=$(sudo -u postgres -i eval 'echo "$HOME"')
    if [ -z "$userhome" ]; then
      userhome=$(grep postgres /etc/passwd|awk -F":" '{print $6}')
    fi
    if [ -f $userhome/.pgpass ]; then
      local pwd=$(grep odoo $userhome/.pgpass|awk -F: '{ print $5 }'|head -n1)
    else
      local pwd=
      while [ -z "$pwd" ]; do
        read -rsp"Type password for postgresql user access (no echo)>" pwd
        echo -e "\n"
        read -rsp"Retype password for validation>" pwd1
        echo -e "\n"
        if [ "$pwd" != "$pwd1" ]; then
          local pwd=
        fi
      done
    fi
    echo "*:*:*:odoo:$pwd">$userhome/.pgpass
    chown postgres:postgres $userhome/.pgpass
    chmod u=rw,g=,o= $userhome/.pgpass
    f_hba=$(findpkg "pg_hba.conf" "/var/lib /etc" "postgresql pgsql" "9.4 9.3 9.2 9.1 9.0 8.4" "data main")
    update_hba_conf $f_hba
    if [ -n "$f_hba" ]; then
      vi $f_hba
    fi
    for ov in $ov_iter; do
      if [ -n "$opt_multi" ]; then
        uu="odoo$ov"
        echo "*:*:*:$uu:$pwd">>$userhome/.pgpass
      elif [ "$ov" == "7" ]; then
        uu=openerp
      else
        uu=odoo
      fi
      local x=$(sudo -iupostgres psql -c \\dg|grep " $uu ")
      if [ -z "$x" ]; then
        elog "Create account $uu for postgres access by odoo"
        echo "Warning: store password you type in odoo config file"
        run_traced "sudo -iupostgres createuser --createdb --username postgres --no-createrole --no-superuser --no-password $uu"
      fi
      elog "Running odoo $ov to configure"
      if [ -f /opt/odoo/.openerp_serverrc ]; then
        rm -f /opt/odoo/.openerp_serverrc
      fi
      cmd="sudo -iuodoo /opt/odoo/$ov.0/openerp-server"
      cmd="$cmd --addons-path=/opt/odoo/$ov.0/openerp/addons,/opt/odoo/$ov.0/addons"
      for iso in ${opt_osub//,/ } ${opt_sub//,/ }; do
        pn=$(get_locale_name "$iso")
        if [ -z "$pn" ]; then
          elog  "Invalid submodule name $iso"
        else
          addons=$(get_locale_dir "$pn")
          if [ -d $addons ]; then
            cmd="$cmd,/opt/odoo/$ov.0/$addons"
          fi
        fi
      done
      for iso in ${opt_locale//,/ }; do
        pn=$(get_locale_name "$iso")
        if [ -z "$pn" ]; then
          elog  "Invalid $iso in -l $opt_locale switch"
        else
          addons=$(get_locale_dir "$pn")
          if [ -d $addons ]; then
            cmd="$cmd,/opt/odoo/$ov.0/$addons"
          fi
        fi
      done
      local xtl_pidfile=/var/run/odoo/$uu.pid
      local xtl_logfile=/var/log/odoo/${uu}-server.log
      cmd="$cmd -s --stop-after-init"
      cmd="$cmd --pidfile=$xtl_pidfile"
      cmd="$cmd --logfile=$xtl_logfile"
      cmd="$cmd --db_host=localhost"
      cmd="$cmd --db_user=$uu"
      cmd="$cmd --db_password=$pwd"
      if [ "$opt_multi" == "-m" ]; then
        cmd="$cmd --xmlrpc-port=816$ov"
      fi
      run_traced "$cmd"
      if [ -f /opt/odoo/.openerp_serverrc ]; then
        if [ $opt_dry_run -eq 0 ]; then
          sed -i "s:^data_dir *=.*Odoo:&$ov:" /opt/odoo/.openerp_serverrc
          [ -z "opt_yes" ] || vim /opt/odoo/.openerp_serverrc
        fi
        run_traced "cp /opt/odoo/.openerp_serverrc /etc/odoo/${uu}-server.conf"
        run_traced "chown odoo:odoo /etc/odoo/${uu}-server.conf"
        run_traced "chmod u+rw,g+r,o+r /etc/odoo/${uu}-server.conf"
        run_traced "$TDIR/product_bld_ods -E$FH -L$xtl_logfile -P$xtl_pidfile $opt_multi -O$ov ${uu}-server"
        run_traced "chown odoo:odoo ${uu}-server"
        run_traced "mv ${uu}-server /etc/init.d/"
      else
        elog "!Odoo error: configuration file not created!!"
      fi
    done
}

pre_config_odoo() {
    sysfile=/etc/group
    group=odoo
    if [ "$ODOO_GID" ]; then
      x=$(grep "^[^:]*:[^:]:$ODOO_GID[^0-9]" $sysfile 2>/dev/null)
      if [ "$x" ]; then
        g=$(echo "$x"|awk -F: '{ print $1 }')
        if [ "$g" != "$group" ]; then
          wlog "# Required gid $ODOO_GID already assigned to $g"
        fi
      fi
    fi
    if [ -z $(grep "^$group:" $sysfile 2>/dev/null) ]; then
      if [ "$ODOO_GID" ]; then
        run_traced "groupadd -g $ODOO_GID $group"
      else
        run_traced "groupadd $group"
      fi
    fi
    if [ "$ODOO_GID" ]; then
      x=$(grep "^$group:.*" $sysfile 2>/dev/null)
      if [ "$x" ]; then
        gid=$(echo "$x"|awk -F: '{ print $3 }')
        if [ "$gid" != "$ODOO_GID" ]; then
          run_traced "groupmod -g $ODOO_GID $group"
        fi
      fi
    fi
    sysfile=/etc/passwd
    user=odoo
    if [ "$ODOO_UID" ]; then
      x=$(grep "^[^:]*:[^:]:$ODOO_UID[^0-9]" $sysfile 2>/dev/null)
      if [ "$x" ]; then
        u=$(echo "$x"|awk -F: '{ print $1 }')
        if [ "$u" != "$user" ]; then
          wlog "# Required uid $ODOO_UID already assigned to $u"
        fi
      fi
    fi
    if [ -z $(grep "^$user:" $sysfile 2>/dev/null) ]; then
      if [ ! -d /opt/odoo ]; then cmd="useradd -m"; else cmd="useradd"; fi
      if [ "$ODOO_UID" ]; then
        run_traced "$cmd -u "$ODOO_UID" -g odoo -d /opt/odoo -s /bin/bash $user"
      else
        run_traced "$cmd -r -g odoo -d /opt/odoo -s /bin/bash $user"
      fi
    fi
    if [ "$ODOO_UID" ]; then
      x=$(grep "^$user:.*" $sysfile 2>/dev/null)
      if [ "$x" ]; then
        uid=$(echo "$x"|awk -F: '{ print $3 }')
        if [ "$uid" != "$ODOO_UID" ]; then
          run_traced "usermod -u $ODOO_UID $user"
        fi
      fi
    fi
}

post_config_odoo() {
    local r=$(get_realname postresql) #tny!!
    run_traced "service $r restart"
}

pre_install_odoo() {
    if [ "$FH" == "RHEL" ]; then
      if [ ! -f /etc/yum.repos.d/odoo.repo ]; then
        run_traced "yum-config-manager --add-repo=https://nightly.odoo.com/8.0/nightly/rpm/odoo.repo"
      fi
    elif [ "$FH" == "Debian" ]; then
      if [ -z "$(apt-key list|grep info@odoo.com 2>/dev/null)" ]; then
        run_traced "wget -O - https://nightly.odoo.com/odoo.key | apt-key add -"
      fi
      if [ -z "$(cat /etc/apt/sources.list|grep 'nightly.odoo.com' 2>/dev/null)" ]; then
       run_traced "echo 'deb http://nightly.odoo.com/8.0/nightly/deb/ ./' >> /etc/apt/sources.list"
      fi
    fi
    pre_config_odoo
}

post_install_odoo() {
    local p
    p=etc
    run_traced "mkdir -p /$p/odoo"
    run_traced "chown odoo:odoo /$p/odoo"
    run_traced "chmod -R u+rw,g+r,o+r /$p/odoo"
    for p in log lib run; do
      run_traced "mkdir -p /var/$p/odoo"
      run_traced "chown odoo:odoo /var/$p/odoo"
      run_traced "chmod -R u+rw,g+r,o+r /var/$p/odoo"
    done
}

post_update_odoo() {
    post_install_odoo
}

post_install_LAMP() {
    if [ "$FH" == "RHEL" ]; then
      run_traced "yum upgrade python-setuptools"
    fi
}

post_config_postgresql() {
    run_traced "service $2 initdb"
    run_traced "chkconfig $1 on"
}

post_config_postgresql-server() {
    if [ "$DISTO" == "CentOS7" ]; then
      run_traced "postgresql-setup initdb"
    else
      run_traced "service $2 initdb"
    fi
    run_traced "chkconfig $2 on"
}

post_config_mysql-server() {
    if [ "$FH" == "RHEL" ]; then
      run_traced "mysql_secure_installation"
      run_traced "chkconfig mysqld on"
    else
      for cmd in mysql_install_db mysql_secure_installation; do
        run_traced "$cmd"
      done
      run_traced "chkconfig mysql on"
    fi
}

post_config_mariadb-server() {
    if [ "$FH" == "RHEL" ]; then
      run_traced "mysql_secure_installation"
    fi
    run_traced "chkconfig mariadb on"
}


