THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
if [ -d $TDIR/tests ]; then
  TESTDIR=$TDIR/tests
elif [ -d $TDIR/../tests ]; then
  TESTDIR=$TDIR
elif [ -d ./tests ]; then
  TESTDIR=./tests
elif [ -d ../tests ]; then
  TESTDIR=.
else
  TESTDIR=$TDIR
fi
if [ -e $TDIR/z0librc ]; then
. $TDIR/z0librc
elif [ -e ./z0librc ]; then
. ./z0librc
elif [ -e ../z0librc ]; then
. ../z0librc
elif [ -e ~/z0librc ]; then
. ~/z0librc
elif [ -e /etc/z0librc ]; then
. /etc/z0librc
else
  echo "Library file z0librc not found!"
  exit $STS_FAILED
fi
TESTDIR=$(readlink -e $TESTDIR)


