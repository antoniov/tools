      fi
    fi
    if [ "$p" ]; then
      prod install $p>$fout
      if [ "$(diff -q $fout $ftest)" ]; then
        elog "Test Failed"
        exit $STS_FAILED
      fi
    fi
    ((++jj))
  done
  if [ -f $fout ]; then rm -f $fout; fi
  if [ -f $ftest ]; then rm -f $ftest; fi
}

test_update () {
  fout=~/$THIS.out
  ftest=~/$THIS.test
  local jj=0
  while ((jj<${#PNLX[*]})); do
    if [ -f $ftest ]; then rm -f $ftest; fi
    p="${PNLX[jj]}"
    if [ "$p" == "odoo" ]; then
      if [ "$FH" == "RHEL" ]; then
        echo "--> cd /opt/odoo/7.0">>$ftest
        echo "--> git pull origin 7.0">>$ftest
        for d in ${opt_osub//,/ }; do
          echo "--> cd /opt/odoo/7.0">>$ftest
