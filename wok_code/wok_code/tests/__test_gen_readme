#! /bin/bash
# -*- coding: utf-8 -*-
# Regression tests on travis emulator
#
READLINK=$(which greadlink 2>/dev/null) || READLINK=$(which readlink 2>/dev/null)
export READLINK
# Based on template 2.0.0
THIS=$(basename "$0")
TDIR=$(readlink -f $(dirname $0))
[ $BASH_VERSINFO -lt 4 ] && echo "This script $0 requires bash 4.0+!" && exit 4
if [[ -z $HOME_DEVEL || ! -d $HOME_DEVEL ]]; then
  [[ -d $HOME/odoo/devel ]] && HOME_DEVEL="$HOME/odoo/devel" || HOME_DEVEL="$HOME/devel"
fi
[[ -x $TDIR/../bin/python3 ]] && PYTHON=$(readlink -f $TDIR/../bin/python3) || [[ -x $TDIR/python3 ]] && PYTHON="$TDIR/python3" || PYTHON="python3"
[[ -z $PYPATH ]] && PYPATH=$(echo -e "import os,sys\no=os.path\na=o.abspath\nj=o.join\nd=o.dirname\nb=o.basename\nf=o.isfile\np=o.isdir\nC=a('"$TDIR"')\nD='"$HOME_DEVEL"'\nif not p(D) and '/devel/' in C:\n D=C\n while b(D)!='devel':  D=d(D)\nN='venv_tools'\nU='setup.py'\nO='tools'\nH=o.expanduser('~')\nT=j(d(D),O)\nR=j(d(D),'pypi') if b(D)==N else j(D,'pypi')\nW=D if b(D)==N else j(D,'venv')\nS='site-packages'\nX='scripts'\ndef pt(P):\n P=a(P)\n if b(P) in (X,'tests','travis','_travis'):\n  P=d(P)\n if b(P)==b(d(P)) and f(j(P,'..',U)):\n  P=d(d(P))\n elif b(d(C))==O and f(j(P,U)):\n  P=d(P)\n return P\ndef ik(P):\n return P.startswith((H,D,K,W)) and p(P) and p(j(P,X)) and f(j(P,'__init__.py')) and f(j(P,'__main__.py'))\ndef ak(L,P):\n if P not in L:\n  L.append(P)\nL=[C]\nK=pt(C)\nfor B in ('z0lib','zerobug','odoo_score','clodoo','travis_emulator'):\n for P in [C]+sys.path+os.environ['PATH'].split(':')+[W,R,T]:\n  P=pt(P)\n  if B==b(P) and ik(P):\n   ak(L,P)\n   break\n  elif ik(j(P,B,B)):\n   ak(L,j(P,B,B))\n   break\n  elif ik(j(P,B)):\n   ak(L,j(P,B))\n   break\n  elif ik(j(P,S,B)):\n   ak(L,j(P,S,B))\n   break\nak(L,os.getcwd())\nprint(' '.join(L))\n"|$PYTHON)
[[ $TRAVIS_DEBUG_MODE -ge 8 ]] && echo "PYPATH=$PYPATH"
for d in $PYPATH /etc; do
  if [[ -e $d/z0librc ]]; then
    . $d/z0librc
    Z0LIBDIR=$(readlink -e $d)
    break
  fi
done
[[ -z "$Z0LIBDIR" ]] && echo "Library file z0librc not found in <$PYPATH>!" && exit 72
[[ $TRAVIS_DEBUG_MODE -ge 8 ]] && echo "Z0LIBDIR=$Z0LIBDIR"
TESTDIR=$(findpkg "" "$TDIR . .." "tests")
[[ $TRAVIS_DEBUG_MODE -ge 8 ]] && echo "TESTDIR=$TESTDIR"
RUNDIR=$(readlink -e $TESTDIR/..)
[[ $TRAVIS_DEBUG_MODE -ge 8 ]] && echo "RUNDIR=$RUNDIR"
Z0TLIBDIR=$(findpkg z0testrc "$PYPATH" "zerobug")
[[ -z "$Z0TLIBDIR" ]] && echo "Library file z0testrc not found!" && exit 72
. $Z0TLIBDIR
Z0TLIBDIR=$(dirname $Z0TLIBDIR)
[[ $TRAVIS_DEBUG_MODE -ge 8 ]] && echo "Z0TLIBDIR=$Z0TLIBDIR"

# DIST_CONF=$(findpkg ".z0tools.conf" "$PYPATH")
# TCONF="$HOME/.z0tools.conf"
CFG_init "ALL"
link_cfg_def
link_cfg $DIST_CONF $TCONF
[[ $TRAVIS_DEBUG_MODE -ge 8 ]] && echo "DIST_CONF=$DIST_CONF" && echo "TCONF=$TCONF"
get_pypi_param ALL
RED="\e[1;31m"
GREEN="\e[1;32m"
CLR="\e[0m"

__version__=2.0.0.2


test_01() {
    # Test RST files
    local TESTOUT TESTRES TESTFN
    TESTFN=test_gen_readme_01
    TESTSRC=$TESTDIR/res/$TESTFN.rst
    TESTRES=$TESTDIR/res/$TESTFN.test
    TESTOUT=$TESTDIR/res/README.rst
    if [ ${opt_dry_run:-0} -eq 0 ]; then
      rm -f $TESTOUT
      # Files in module directory (tested branch is 11.0)
      cat <<EOF >$TESTDIR/res/__manifest__.py
{
    'name': 'mtest',
}
EOF
      # Files in egg-info of module directory (tested branch is 11.0)
      cat <<EOF >$TESTDIR/res/descrizione.rst
Lorem ipsum
-----------

Lorem ipsum **dolor** sit amet
.. \$if branch in '12.0'
odoo 12.0
.. \$elif branch in '10.0'
odoo 10.0
.. \$elif branch in '8.0'
odoo 8.0
.. \$else
consectetur *adipiscing* elit
.. \$fi

* Feature A
* Feature B

::

    >>> doc
|
.. image:: logo.png
   :alt: Odoo Community Association
   :target: https://odoo-community.org

+-----------+---------+
| Feature A | |check| |
+-----------+---------+
| Feature B |         |
+-----------+---------+
| Feature C | ©SHS    |
+-----------+---------+
EOF
      cat <<EOF >$TESTDIR/res/authors.txt
.. \$if branch in '12.0'
* wrong author
.. \$elif branch in '11.0'
* SHS-AV s.r.l. <https://www.shs-av.com>
.. \$elif branch in '10.0'
* wrong author
.. \$elif branch in '7.0'
* SHS-AV s.r.l. <https://www.zeroincombenze.it>
.. \$else
* unknown authors
.. \$fi
EOF
      cat <<EOF >$TESTDIR/res/contributors.txt
.. \$if branch in '12.0'
* wrong contributor <wrong@example.com>
.. \$elif branch in '11.0'
* antonio <antoniov@libero.it>
.. \$elif branch in '10.0'
* alberta <alberta@libero.it>
.. \$elif branch in '9.0'
* daniela <daniela@libero.it>
.. \$elif branch in '7.0'
* antonio <antoniov@shs-av.com>
.. \$else
* unknown contributor <unknow@example.com>
.. \$fi
EOF
      # Files in template directory
      cat <<EOF >$TESTSRC
===============
|icon| {{name}}
===============

Test file

Overview
========

{{descrizione}}

{{authors}}
{{contributors}}
{{acknowledges}}
.. \$include footer.rst
EOF
      cat <<EOF >$TESTDIR/res/footer.rst

----------------------

.. |en| image:: {{grymb_image_en}}
   :target: {{grymb_url_en}}
.. |it| image:: {{grymb_image_it}}
   :target: {{grymb_url_it}}
EOF
      cat <<EOF >$TESTDIR/res/header_authors.txt

Authors
-------

EOF
      cat <<EOF >$TESTDIR/res/header_contributors.txt

Contributors
------------

EOF
      cat <<EOF >$TESTDIR/res/header_acknowledges.txt

Acknoledges to
--------------

EOF
      # Files for test match
      cat <<EOF >$TESTRES
============
|icon| mtest
============

Test file

Overview
========

Lorem ipsum
-----------

Lorem ipsum **dolor** sit amet
consectetur *adipiscing* elit

* Feature A
* Feature B

::

    >>> doc
|
.. image:: https://raw.githubusercontent.com/zeroincombenze/rtest/11.0/mtest/static/description/logo.png
   :alt: Odoo Community Association
   :target: https://odoo-community.org

+-----------+---------+
| Feature A | |check| |
+-----------+---------+
| Feature B |         |
+-----------+---------+
| Feature C | ©SHS    |
+-----------+---------+



Authors
-------

* \`SHS-AV s.r.l. <https://www.shs-av.com>\`__

Contributors
------------

* antonio <antoniov@libero.it>


Acknoledges to
--------------

* daniela <daniela@libero.it>
* alberta <alberta@libero.it>


----------------------

.. |en| image:: https://raw.githubusercontent.com/zeroincombenze/grymb/master/flags/en_US.png
   :target: https://www.facebook.com/Zeroincombenze-Software-gestionale-online-249494305219415/
.. |it| image:: https://raw.githubusercontent.com/zeroincombenze/grymb/master/flags/it_IT.png
   :target: https://www.facebook.com/Zeroincombenze-Software-gestionale-online-249494305219415/


EOF
      pushd $TESTDIR/res &>/dev/null
      $RUNDIR/gen_readme.py -q -b11.0 -lmodule -mmtest -rrtest -Gzero -t$TESTSRC -p$TESTDIR/res -Podoo -w
      popd &>/dev/null
    fi
    test_result "gen_readme.py -q -b11.0 -lmodule -mmtest -rrtest -Gzero -t$TESTSRC -p$TESTDIR/res -Podoo -w" "$TESTRES" "$TESTOUT" "diff"
}

test_02() {
    # Test HTML files
    local TESTOUT TESTRES TESTFN
    TESTFN=test_gen_readme_02
    TESTSRC=$TESTDIR/res/$TESTFN.html
    TESTRES=$TESTDIR/res/$TESTFN.test
    TESTOUT=$TESTDIR/res/index.html
    if [ ${opt_dry_run:-0} -eq 0 ]; then
      rm -f $TESTOUT
      # Files in template directory
      rm -f $TESTDIR/res/header_authors.txt
      cat <<EOF >$TESTSRC
<section class="oe_container">

Test file

<h1>Overview</h1>

{{descrizione}}

{{authors}}
</section>
EOF
      # Files for test match (tested branch is 11.0)
      cat <<EOF >$TESTRES

<section class="oe_container">

Test file

<h1>Overview</h1>

<h2>mtest / Lorem ipsum</h2>
<p align="justify">
Lorem ipsum <b>dolor</b> sit amet
consectetur <i>adipiscing</i> elit
</p><p align="justify">
<ul>
<li>Feature A</li>
<li>Feature B</li>
</ul>
</p><p align="justify">

<code>
    &gt;&gt;&gt; doc
</code>
<br/>
</p>
<img src="logo.png"/>
<p align="justify">
<table style="width:100%; padding:2px; border-spacing:2px; text-align:left;"><tr>
<td>Feature A</td><td><img src="https://raw.githubusercontent.com/zeroincombenze/grymb/master/awesome/check.png"/></td>
</tr><tr>
<td>Feature B</td><td/>
</tr><tr>
<td>Feature C</td><td>&#169;SHS</td>
</tr></table>
</p>

<ul>
<li><a href="https://www.shs-av.com/">SHS-AV s.r.l.</a></li>
</ul>
</section>
EOF
      pushd $TESTDIR/res &>/dev/null
      $RUNDIR/gen_readme.py -qTH -b11.0 -lmodule -mmtest -rrtest -Gzero -t$TESTSRC -p$TESTDIR/res -Podoo -w
      popd &>/dev/null
    fi
    test_result "gen_readme.py -qTH -b11.0 -lmodule -mmtest -rrtest -Gzero -t$TESTSRC -p$TESTDIR/res -Podoo -w" "$TESTRES" "$TESTOUT" "diff"
}


test_03() {
    # Test manifest
    local TESTOUT TESTRES TESTFN
    TESTFN=test_gen_readme_03
    TESTSRC=$TESTDIR/res/readme_manifest.rst
    TESTRES=$TESTDIR/res/$TESTFN.test
    TESTOUT=$TESTDIR/res/__openerp__.py
    TESTRDNME=$TESTDIR/res/README.rst
    if [ ${opt_dry_run:-0} -eq 0 ]; then
      rm -f $TESTOUT
      [[ -f $TESTRDNME ]] && rm -f $TESTRDNME
      # Files in module directory
      cat <<EOF >$TESTDIR/res/__openerp__.py
# (C) SHS-Av s.r.l.
{
    'name': 'test',
    'depends': ['base', 'account'],
}
EOF
      # Files in template directory
      cat <<EOF >$TESTSRC

Overview
========

|it| {{descrizione}}

{{authors}}
{{contributors}}
.. \$include footer.rst
EOF
      # Files for test match
      cat <<EOF >$TESTRES
# (C) SHS-Av s.r.l.
{
    'name': 'test',
    'version': '7.0.0.1.0',
    'development_status': 'Alpha',
    'license': 'AGPL-3',
    'depends': [
        'base',
        'account',
    ],
    'description': r'''
Overview
========

|it| Lorem ipsum
----------------

Lorem ipsum **dolor** sit amet
consectetur *adipiscing* elit

* Feature A
* Feature B

::

    >>> doc
|
.. image:: /mtest/static/src/img/logo.png
   :alt: Odoo Community Association
   :target: https://odoo-community.org

+-----------+---------+
| Feature A | |check| |
+-----------+---------+
| Feature B |         |
+-----------+---------+
| Feature C | ©SHS    |
+-----------+---------+


* \`SHS-AV s.r.l. <https://www.zeroincombenze.it>\`__

Contributors
------------

* antonio <antoniov@shs-av.com>


----------------------

.. |en| image:: https://raw.githubusercontent.com/zeroincombenze/grymb/master/flags/en_US.png
   :target: https://www.facebook.com/Zeroincombenze-Software-gestionale-online-249494305219415/
.. |it| image:: https://raw.githubusercontent.com/zeroincombenze/grymb/master/flags/it_IT.png
   :target: https://www.facebook.com/Zeroincombenze-Software-gestionale-online-249494305219415/


''',
}
EOF
      pushd $TESTDIR/res &>/dev/null
      $RUNDIR/gen_readme.py -qR -b7.0 -lmodule -mmtest -rrtest -Gzero -t$TESTSRC -p$TESTDIR/res -Podoo -w
      popd &>/dev/null
    fi
    test_result "gen_readme.py -qR -b7.0  -lmodule -mmtest -rrtest -Gzero -t$TESTSRC -p$TESTDIR/res -Podoo -w" "$TESTRES" "$TESTOUT" "diff"
}


