test_05() {
    # Test __manifest__.py    local TESTOUT TESTRES TESTFN
    TESTFN=test_gen_readme_05
    TESTSRC=$TESTDIR/res/$TESTFN.py
    TESTRES=$TESTDIR/res/$TESTFN.test
    TESTOUT=$TESTDIR/res/__manifest__.py
    if [ ${opt_dry_run:-0} -eq 0 ]; then
      rm -f $TESTOUT
      touch $TESTDIR/res/__init__.py
      cat <<EOF >$TESTDIR/res/__manifest__.py
{
    'name': 'mtest',
    'version': '12.0.1.0',
}
EOF
      # Files for test match
      cat <<EOF >$TESTRES
{
    'name': 'mtest',
    'version': '12.0.1.0',
    'author': 'powERP enterprise network',
    'website': 'https://www.powerp.it',
    'development_status': 'Alpha',
    'license': 'OPL-1',
}
EOF
      pushd $TESTDIR/res &>/dev/null
      $RUNDIR/gen_readme.py -q -b12.0 -Gpowerp -WR -w
      popd &>/dev/null
    fi
    test_result "gen_readme.py -q -b12.0 -Gpowerp -WR -w" "$TESTOUT" "$TESTRES" "diff"
}

Z0BUG_init
parseoptest -l$TESTDIR/test_wok_code.log "$@"
sts=$?
[[ $sts -ne 127 ]] && exit $sts


UT1_LIST=""
UT_LIST=""
[[ "$(type -t Z0BUG_setup)" == "function" ]] && Z0BUG_setup
Z0BUG_main_file "$UT1_LIST" "$UT_LIST"
sts=$?
[[ "$(type -t Z0BUG_teardown)" == "function" ]] && Z0BUG_teardown
exit $sts