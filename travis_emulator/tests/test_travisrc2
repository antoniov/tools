    local SAVED_TMPDIR=$LCLTEST_TMPDIR
    if [ ${opt_dry_run:-0} -eq 0 ]; then
      LCLTEST_TMPDIR=~/dev/odoo/$VERSION/$LCLTEST_REPOSNAME
