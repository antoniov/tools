#! /bin/bash
# -*- coding: utf-8 -*-
#
THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
if [ -d $TDIR/tests ]; then
  TESTDIR=$TDIR/tests
  RUNDIR=$TDIR
elif [ -d $TDIR/../tests ]; then
  TESTDIR=$TDIR
  RUNDIR=$TDIR/..
elif [ -d ./tests ]; then
  TESTDIR=./tests
  RUNDIR=./
elif [ -d ../tests ]; then
  TESTDIR=./
  RUNDIR=../
else
  TESTDIR=$TDIR
  RUNDIR=$TDIR/..
fi
if [ -d $TDIR/_travis ]; then
  TRAVISDIR=$TDIR
elif [ -d $TDIR/../_travis ]; then
  TRAVISDIR=$TDIR/..
elif [ -d ./_travis ]; then
  TRAVISDIR=./
elif [ -d ../_travis ]; then
  TRAVISDIR=../
else
  TRAVISDIR=~/dev/_travis
fi
if [ -e $TDIR/z0librc ]; then
. $TDIR/z0librc
elif [ -e ./z0librc ]; then
. ./z0librc
elif [ -e ../z0librc ]; then
. ../z0librc
elif [ -e ~/z0librc ]; then
. ~/z0librc
else
. /etc/z0librc
fi
if [ -e $TDIR/z0testrc ]; then
. $TDIR/z0testrc
elif [ -e ./z0testrc ]; then
. ./z0testrc
elif [ -e ../z0testrc ]; then
. ../z0testrc
else
. ~/dev/z0testrc
fi

if [ -f ./travisrc ]; then
. ./travisrc
elif [ -f ../travisrc ]; then
. ../travisrc
fi

TESTDIR=$(readlink -e $TESTDIR)
RUNDIR=$(readlink -e $RUNDIR)
TRAVISDIR=$(readlink -e $TRAVISDIR)

__version__=0.1.59.2

declare -a ctrs
export WNoCtr=1
parseoptest -l$TESTDIR/test_travis_em.log $@
sts=$?
if [ $sts -ne 127 ]; then
  exit $sts
fi
opt4childs=$(inherit_opts)
UT_LIST="test_lib test_regex test_dist_pkg"
saved_ctr=$ctr
saved_max_test=$max_test
saved_opt_verbose=$opt_verbose
saved_opt_dry_run=$opt_dry_run
saved_LNEW=$LNEW
saved_LECHO=$LECHO

ix=0
sts=0
# pass 1: count for # of tests
max_test=0
exec_tests_4_count "version" "2"
exec_tests_4_count "$UT_LIST"
if [ ${saved_max_test:-0} -gt 0 ]; then
  max_test=$saved_max_test
elif [ ${opt_noctr:-0} -gt 0 ]; then
  max_test=
fi
# pass 2: execute tests
ctr=$saved_ctr
opt_verbose=$saved_opt_verbose
opt_dry_run=$saved_opt_dry_run
LNEW=$saved_LNEW
LECHO=$saved_LECHO
if [ ${opt_noctr:-0} -eq 0 -a ${ctr:-0} -gt 0 -a ${saved_max_test:-0} -eq 0 ]; then
   let max_test="$max_test"+"$ctr"
fi
if [ ${opt_dry_run:-0} -eq 0 ]; then
  ix=0
  sts=0
  # 2 test are for version id
  xtlver=$($RUNDIR/travis -V)
  ci-test "check for travis version" "$__version__" "$xtlver"
  xtlver=$($RUNDIR/please -V)
  ci-test "check for travis version" "0.1.27.6" "$xtlver"
  exec_all_tests "$UT_LIST"
  if [ $sts -eq 0 ]; then
    echo "Test successfully terminated"
  else
    echo "Test failed!"
  fi
else
  echo "$max_test"
fi
exit $sts
