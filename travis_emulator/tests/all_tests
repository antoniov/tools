#! /bin/bash
# -*- coding: utf-8 -*-
if [ -f ./travisrc ]; then
. ./travisrc
TESTDIR=./tests
elif [ -f ../travisrc ]; then
. ../travisrc
TESTDIR=.
fi

set_tlog_file "$TESTDIR/test_travis_em.log" "new" "echo"
export ctr=0
$TESTDIR/test_regex
sts=$?
if [ $sts -eq 0 ]; then
  $TESTDIR/test_Makefile
  sts=$?
fi
if [ $sts -eq 0 ]; then
  $TESTDIR/test_dist_pkg
  sts=$?
fi
if [ $sts -eq 0 ]; then
  echo "Test successfully terminated"
else
  echo "Test failed!"
fi
exit $sts
