# -*- coding: utf-8 -*-
# Regression tests on z0lib
#
THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
for x in "$TDIR" "$TDIR/.." "." ".." "~" "/etc"; do
  if [ -e $x/z0librc ]; then
    . $x/z0librc
    Z0LIBDIR=$x
    Z0LIBDIR=$(readlink -e $Z0LIBDIR)
    break
  fi
done
if [ -z "$Z0LIBDIR" ]; then
  echo "Library file z0librc not found!"
  exit 2
fi
TESTDIR=$(findpkg "" "$TDIR . .." "tests")
RUNDIR=$(readlink -e $TESTDIR/..)
Z0TLIBDIR=$(findpkg "z0testrc" "$TDIR . .. $HOME/dev")
. $Z0TLIBDIR
Z0TLIBDIR=$(dirname $Z0TLIBDIR)


__version__=0.1.43


test_00() {
    local CWD=$PWD
    cd $Z0LIBDIR
    local OK=$(_install_z0librc "-n")
    cd $CWD
    test_result "check for lib version (2)" "cp ./z0librc /etc/z0librc" "$OK"
}

Z0BUG_init
parseoptest -l$TESTDIR/test_z0librc.log $@
sts=$?
if [ $sts -ne 127 ]; then
  exit $sts
fi

UT1_LIST="test_wlog"
UT_LIST="__version_1_${__version__}$RUNDIR/z0librc"
UT_LIST="$UT_LIST test_00"
UT_LIST="$UT_LIST test_findpkg test_run test_parseoptargs test_dict1 test_dict2 test_cfg1 test_cfg2 test_cfg3 test_cfg4 test_Makefile"
Z0BUG_main_file "$UT1_LIST" "$UT_LIST"
exit $?
