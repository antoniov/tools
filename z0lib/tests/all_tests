#! /bin/bash
# -*- coding: utf-8 -*-
#
THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
if [ -f ./z0librc ]; then
. ./z0librc
. ./z0testrc
  xtlver=$(grep "#__version__" ./z0librc|head -n1|awk -F\= '{print $2}')
  FINAL=./optargs
  TESTDIR=./tests
  RUNDIR=./
  OK=$(_install_z0librc "-n")
elif [ -f ../z0librc ]; then
. ../z0librc
. ../z0testrc
  xtlver=$(grep "#__version__" ../z0librc|head -n1|awk -F\= '{print $2}')
  FINAL=../optargs
  TESTDIR=.
  RUNDIR=../
  CWD=$PWD
  cd ..
  OK=$(_install_z0librc "-n")
  cd $CWD
elif [ -f ~/z0librc ]; then
. ~/z0librc
. ~/dev/z0testrc
  xtlver=$(grep "#__version__" ~/z0librc|head -n1|awk -F\= '{print $2}')
  RUNDIR=./
else
. /etc/z0librc
. ~/dev/z0testrc
  xtlver=$(grep "#__version__" ~/z0librc|head -n1|awk -F\= '{print $2}')
  RUNDIR=./
fi
RUNDIR=$(readlink -e $RUNDIR)
TESTDIR=$(readlink -e $TESTDIR)

__version__=0.1.24

declare -a ctrs
export WNoCtr=1
parseoptest -l$TESTDIR/test_z0librc.log $@
sts=$?
if [ $sts -ne 127 ]; then
  exit $sts
fi
opt4childs=$(inherit_opts)
UT1_LIST="test_wlog"
UT_LIST="test_findpkg test_parseoptargs test_dict test_cfg test_Makefile"
saved_ctr=$ctr
saved_max_test=$max_test
saved_opt_verbose=$opt_verbose
saved_opt_dry_run=$opt_dry_run
saved_LNEW=$LNEW
saved_LECHO=$LECHO

ix=0
sts=0
WLOGCMD=echo
FLOG=
# pass 1: count for # of tests
max_test=0
# 2 test are for version id
exec_tests_4_count "version" "2"
exec_tests_4_count "$UT1_LIST"
exec_tests_4_count "$UT_LIST"
if [ ${saved_max_test:-0} -gt 0 ]; then
  max_test=$saved_max_test
elif [ ${opt_noctr:-0} -gt 0 ]; then
  max_test=
fi
#echo "4>i=$ix;m=$max_test;c=${ctrs[@]}<<" #debug
# pass 2: execute tests
ctr=$saved_ctr
opt_verbose=$saved_opt_verbose
opt_dry_run=$saved_opt_dry_run
LNEW=$saved_LNEW
LECHO=$saved_LECHO
if [ "$LECHO" == "echo" ]; then
  WLOGCMD="wecho-1"
else
  WLOGCMD="wecho-0"
fi
FLOG=
if [ ${opt_noctr:-0} -eq 0 -a ${ctr:-0} -gt 0 -a ${saved_max_test:-0} -eq 0 ]; then
   let max_test="$max_test"+"$ctr"
fi
if [ ${opt_dry_run:-0} -eq 0 ]; then
  ix=0
  sts=0
  # 2 test are for version id
  ci-test "check for lib version (1)" "$xtlver" "$__version__"
  ci-test "check for lib version (2)" "cp ./z0librc /etc/z0librc" "$OK"
  ctr=$saved_ctr
  exec_all_tests "version" "2"
  # test w/o tracelog
  exec_all_tests "$UT1_LIST"
  # Test log file successfully ended; set log file to next tests
  WLOGCMD=
  set_tlog_file "$TESTDIR/test_z0librc.log" "" "$LECHO"
  exec_all_tests "$UT_LIST"
  if [ $sts -eq 0 ]; then
    echo "Test successfully terminated"
  else
    echo "Test failed!"
  fi
else
  echo "$max_test"
fi
exit $sts
