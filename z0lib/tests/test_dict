#! /bin/bash
# -*- coding: utf-8 -*-
# Regression tests for submodule of z0lib module
#
THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
if [ -d $TDIR/tests ]; then
  TESTDIR=$TDIR/tests
  RUNDIR=$TDIR
elif [ -d $TDIR/../tests ]; then
  TESTDIR=$TDIR
  RUNDIR=$TDIR/..
elif [ -d ./tests ]; then
  TESTDIR=./tests
  RUNDIR=./
elif [ -d ../tests ]; then
  TESTDIR=./
  RUNDIR=../
else
  TESTDIR=$TDIR
  RUNDIR=$TDIR/..
fi
if [ -d $TDIR/_travis ]; then
  TRAVISDIR=$TDIR
elif [ -d $TDIR/../_travis ]; then
  TRAVISDIR=$TDIR/..
elif [ -d ./_travis ]; then
  TRAVISDIR=./
elif [ -d ../_travis ]; then
  TRAVISDIR=../
else
  TRAVISDIR=~/dev/_travis
fi
if [ -e $TDIR/z0librc ]; then
. $TDIR/z0librc
elif [ -e ./z0librc ]; then
. ./z0librc
elif [ -e ../z0librc ]; then
. ../z0librc
elif [ -e ~/z0librc ]; then
. ~/z0librc
else
. /etc/z0librc
fi
if [ -e $TDIR/z0testrc ]; then
. $TDIR/z0testrc
elif [ -e ./z0testrc ]; then
. ./z0testrc
elif [ -e ../z0testrc ]; then
. ../z0testrc
else
. ~/dev/z0testrc
fi
TESTDIR=$(readlink -e $TESTDIR)
RUNDIR=$(readlink -e $RUNDIR)
TRAVISDIR=$(readlink -e $TRAVISDIR)


base_test () {
    keys=(k01 k02 k03 k04 ^K.*)
    vals=("aaaa" "bbbb" "cccc" "dddd" "any")
    for i in {0..4}; do
      a_add "0" "${keys[i]}" "${vals[i]}"
    done
    for i in {0..3}; do
      TRES=$(a_find "0" ${keys[i]})
      ci-test "find ${keys[i]}" "${vals[i]}" "$TRES"
    done

    keys=(k11 k12 k13 k14 ^K.*)
    vals=("AAAA" "BBBB" "CCCC" "DDDD" "ANY")
    for i in {0..4}; do
      a_add "1" "${keys[i]}" "${vals[i]}"
    done
    for i in {0..3}; do
      TRES=$(a_find "1" ${keys[i]})
      ci-test "find ${keys[i]}" "${vals[i]}" "$TRES"
    done
    keys=(k01 k02 k03 k04)
    for i in {0..3}; do
      TRES=$(a_find "1" ${keys[i]})
      ci-test "find ${keys[i]}" "" "$TRES"
    done

    keys=(k21 k22 k23 k24 ^K.*)
    vals=("Aaaa" "Bbbb" "Cccc" "Dddd" "Any")
    for i in {0..4}; do
      a_add "2" "${keys[i]}" "${vals[i]}"
    done
    for i in {0..3}; do
      TRES=$(a_find "2" ${keys[i]})
      ci-test "find ${keys[i]}" "${vals[i]}" "$TRES"
    done
    keys=(k01 k02 k03 k04)
    for i in {0..3}; do
      TRES=$(a_find "2" ${keys[i]})
      ci-test "find ${keys[i]}" "" "$TRES"
    done
    keys=(k11 k12 k13 k14)
    for i in {0..3}; do
      TRES=$(a_find "2" ${keys[i]})
      ci-test "find ${keys[i]}" "" "$TRES"
    done

    keys=(k31 k32 k33 k34 ^K.*)
    vals=("AAaa" "BBbb" "CCcc" "DDdd" "ANy")
    for i in {0..4}; do
      a_add "3" "${keys[i]}" "${vals[i]}"
    done
    for i in {0..3}; do
      TRES=$(a_find "3" ${keys[i]})
      ci-test "find ${keys[i]}" "${vals[i]}" "$TRES"
    done
}


__version__=0.1.23
parseoptest -l$TESTDIR/test_z0librc.log $@
sts=$?
if [ $sts -ne 127 ]; then
  exit $sts
fi
sts=0

DEFDICT0="Dirty"
DEFRULE0="Dirty!"
DEFDICT1="Dirty"
DEFRULE1="Dirty!"
DEFDICT2="Dirty"
DEFRULE2="Dirty!"
DEFDICT3="Dirty"
DEFRULE4="Dirty!"
for i in {0..3}; do
  $(a_new "$i")
  $(a_active "$i")
done

base_test

keys=(k01 k02 k03 k04)
for i in {0..3}; do
  TRES=$(a_find "3" ${keys[i]})
  ci-test "find ${keys[i]}" "" "$TRES"
done
keys=(k11 k12 k13 k14)
for i in {0..3}; do
  TRES=$(a_find "3" ${keys[i]})
  ci-test "find ${keys[i]}" "" "$TRES"
done
keys=(k21 k22 k23 k24)
for i in {0..3}; do
  TRES=$(a_find "3" ${keys[i]})
  ci-test "find ${keys[i]}" "" "$TRES"
done

TRES=$(a_find "0" "K9")
ci-test "find K9" "any" "$TRES"
TRES=$(a_find "1" K9)
ci-test "find K9" "ANY" "$TRES"

fh=$(xuname "-f")
x=$(xuname "-v")
disto=$(xuname "-d")${x:0:1}
a_add "0" "k01" "global_a" "-f"
TRES=$(a_find "0" "k01")
ci-test "find k01" "global_a" "$TRES"
a_add "0" "k01" "local_a" "-d"
TRES=$(a_find "0" "k01")
ci-test "find k01" "local_a" "$TRES"

a_add "1" "k01" "global_A" "-f"
TRES=$(a_find "1" "k01")
ci-test "find k01" "global_A" "$TRES"
a_add "1" "k01" "local_A" "-d"
TRES=$(a_find "1" "k01")
ci-test "find k01" "local_A" "$TRES"

a_add "2" "k01" "Global_A" "-f"
TRES=$(a_find "2" "k01")
ci-test "find k01" "Global_A" "$TRES"
a_add "2" "k01" "Local_A" "-d"
TRES=$(a_find "2" "k01")
ci-test "find k01" "Local_A" "$TRES"

a_add "3" "k01" "GLobal_A" "-f"
TRES=$(a_find "3" "k01")
ci-test "find k01" "GLobal_A" "$TRES"
a_add "3" "k01" "LOcal_A" "-d"
TRES=$(a_find "3" "k01")
ci-test "find k01" "LOcal_A" "$TRES"

a_add "0" "^K.*" "global_any" "-f"
TRES=$(a_find "0" "K9")
ci-test "find K9" "global_any" "$TRES"
a_add "0" "^K.*" "local_any" "-d"
TRES=$(a_find "0" "K9")
ci-test "find K9" "local_any" "$TRES"

a_add "1" "^K.*" "global_ANY" "-f"
TRES=$(a_find "1" "K9")
ci-test "find K9" "global_ANY" "$TRES"
a_add "1" "^K.*" "local_ANY" "-d"
TRES=$(a_find "1" "K9")
ci-test "find K9" "local_ANY" "$TRES"

a_add "2" "^K.*" "Global_ANY" "-f"
TRES=$(a_find "2" "K9")
ci-test "find K9" "Global_ANY" "$TRES"
a_add "2" "^K.*" "Local_ANY" "-d"
TRES=$(a_find "2" "K9")
ci-test "find K9" "Local_ANY" "$TRES"

a_add "3" "^K.*" "GLobal_ANY" "-f"
TRES=$(a_find "3" "K9")
ci-test "find K9" "GLobal_ANY" "$TRES"
a_add "3" "^K.*" "LOcal_ANY" "-d"
TRES=$(a_find "3" "K9")
ci-test "find K9" "LOcal_ANY" "$TRES"

for i in {0..3}; do
  $(a_new "$i")
  $(a_active "$i")
done

base_test

if [ ${opt_dry_run:-0} -ne 0 ]; then
  echo "$ctr"
fi
exit $sts
