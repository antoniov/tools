#! /bin/bash
# -*- coding: utf-8 -*-
#
# transodoo
# Odoo Translation Tool
#
# This free software is released under GNU Affero GPL3
# author: Antonio M. Vigliotti - antoniomaria.vigliotti@gmail.com
# (C) 2017-2017 by SHS-AV s.r.l. - http://www.shs-av.com - info@shs-av.com
#
THIS=$(basename $0)
TDIR=$(readlink -f $(dirname $0))
for x in $TDIR $TDIR/.. $TDIR/../z0lib $TDIR/../../z0lib . .. /etc; do
  if [ -e $x/z0librc ]; then
    . $x/z0librc
    Z0LIBDIR=$x
    Z0LIBDIR=$(readlink -e $Z0LIBDIR)
    break
  fi
done
if [ -z "$Z0LIBDIR" ]; then
  echo "Library file z0librc not found!"
  exit 2
fi
TRAVISLIBDIR=$(findpkg travisrc "$TDIR $TDIR/.. $TDIR/../travis_emulator $TDIR/../../travis_emulator . .. $HOME/dev")
if [ -z "$TRAVISLIBDIR" ]; then
  echo "Library file travisrc not found!"
  exit 2
fi
. $TRAVISLIBDIR
TESTDIR=$(findpkg "" "$TDIR . .." "tests")
RUNDIR=$(readlink -e $TESTDIR/..)

__version__=0.0.1



OPTOPTS=(h        b          l         n           q           V           v)
OPTDEST=(opt_help opt_branch opt_lang  opt_dry_run opt_verbose opt_version opt_verbose)
OPTACTI=(1        "="        "="       1           0           "*"         "+")
OPTDEFL=(1        "10.0"     "it"      0           -1          ""          -1)
OPTMETA=("help"   "branch"   "iso3166" "noop"      "quiet"     "version"   "verbose")
OPTHELP=("this help, type '$THIS help' for furthermore info"\
 "branch: must be 6.1 7.0 8.0 9.0 or 10.0 (def 10.0)"\
 "language (def it)"\
 "do nothing (dry-run)"\
 "silent mode"\
 "show version end exit"\
 "verbose mode")
OPTARGS=(action)

parseoptargs "$@"
if [ "$opt_version" ]; then
  echo "$__version__"
  exit 0
fi
HLPCMDLIST="export|import"
if [ $opt_help -gt 0 ]; then
  print_help "Odoo Translation Tool\nAction may be on of: $HLPCMDLIST"\
  "(C) 2017-2017 by zeroincombenze(R)\nhttp://wiki.zeroincombenze.org/en/Linux/dev\nAuthor: antoniomaria.vigliotti@gmail.com"
  exit 0
fi

mlist=""
for f in $(find ~/$opt_branch -name $opt_lang.po); do
  p=$(dirname $f)
  pk=$(readlink -e $p/..)
  m=$(basename $pk)
  if [ -f $pk/__openerp__.py ]; then
    if grep "^ *.installable. *:" $pk/__openerp__.py|grep -q "False"; then
      # if [ $? -eq 0 ]; then
      :
    else
      mlist="$mlist,$m"
    fi
  fi
done
pk=${mlist:1}
if [ $opt_verbose -ne 0 ]; then
  echo "/opt/odoo/$opt_branch/openerp-server --modules=$pk --i18n-export=/opt/odoo/tmp.po -lit_IT --stop-after-init -d demo8"
fi
/opt/odoo/$opt_branch/openerp-server --modules=$pk --i18n-export=/opt/odoo/tmp.po -lit_IT --stop-after-init -d demo8
